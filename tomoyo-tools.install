post_install() {
  echo \
"    Remember, that TOMOYO is not enabled in Archlinux default kernel.
    You need to (re-)compile default or build your own kernel with following
  option enabled: CONFIG_SECURITY_TOMOYO=y

    Also, please add 'security=tomoyo' option to your kernel boot options or
  enable next option in your kernel .config: CONFIG_DEFAULT_SECURITY_TOMOYO=y"
}
